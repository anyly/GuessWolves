/* component/game/player.wxss */
.player {
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: flex-start;
  margin: 4px 4px 0 4px;
}
.body {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: flex-start;
}
.player.right .body {
  flex-direction: row-reverse;
}
.player .left {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  position: relative;
}
.player>.left {
  margin-right: 4px;
}
.player.right .left {
  margin-right: 0px;
  margin-left: 4px;
}
.player .right {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: stretch;
  position: relative;
  margin-top: 20px;
}
.player.right .right {
  flex-direction: row-reverse;
}

.face {
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
  position: relative;
}
.user {
  text-align: center;
  font-size: 14px;
  line-height: 14px;
  font-weight: bold;
  height: 14px;
  margin: 0 4px;
}
.img {
  width: 50px;
  height: 50px;
  border-radius: 50%;
}
.disconnect {
  position: absolute;
  color: aliceblue;
  font-size: 14px;
  font-weight: bold;
  padding: 0 6px;
  background-color: grey;
  border-radius: 6px;
}
.status {
  position: absolute;
  bottom: 0px;
  font-size: 14px;
  font-weight: bold;
  color: red;
  border: 1px red dashed;
  padding: 0 4px;
  border-radius: 8px;
}
.tags {
  position: relative;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: flex-start; 
}
.player.right .tags {
  flex-direction: row-reverse;
}
.vote {
  background-image: url(https://www.idearfly.com/static/image/hand.png);
  background-size: 100%;
  background-position: top left;
  background-repeat: no-repeat;
  width: 27px;
  height: 27px;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  color: yellow;
  font-size: 14px;
  font-weight: bold; 
  text-align: center;
  position: absolute;
  right:-15px;
  top:15px;
  z-index: 2;
}
.player.right .vote {
  left:-15px;
  right: unset;
  top:15px;
}
.tag {
  display: block;
  width: 1em;
  line-height: 1em;
  font-size: 8px;
  font-weight: bold;
  margin-right: 2px;
  padding: 2px;
  color: yellow;
  border-radius: 4px;
  background-color: dodgerblue;
  text-overflow: clip;
  overflow: hidden;
}
.player.right .tag {
  margin-left: 2px;
}
.seat {
  font-weight: bold;
  color: yellow;
  text-align: center;
  padding: 0 6px 0 2px;
  background-color: brown;
  border-top-right-radius: 6px;
  border-bottom-right-radius: 6px;
  position: absolute;
  top: -4px;
  left: -4px;
  z-index: 2;
}
.player.right .seat {
  padding:0 2px 0 6px;
  border-top-right-radius: unset;
  border-bottom-right-radius: unset;
  border-top-left-radius: 6px;
  border-bottom-left-radius: 6px;
  top: -4px;
  left: unset;
  right: -4px;
}
.poker {
  background-color: brown;
  color:  yellow;
  border-radius: 6px;
  padding: 0 6px;
  font-weight: bold;
  font-size: 12px;
  white-space: nowrap;
  position: absolute;
  left: 100%;
  top: -4px;
  margin-left: -10px; 
}
.player.right .poker {
  right: 100%;
  left: unset;
  top: -4px;
  margin-right: -10px; 
}
.speaks {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-around;
}
.speak {
  text-align: center;
  font-size: 16px;
  background-color: #f2f2f2;
  color: brown;
  border: 1px brown solid;
  border-radius: 4px;
  display: flex;
  justify-content: center;
  align-items: center;
  height: 10px;
}
.speak>text {
  line-height: 0;
}