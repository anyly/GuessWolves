/* hall/index.wxss */
.page-body {
  background-color: black;
  width: 100%;
  height: 100%;
  background-image: url(https://www.idearfly.com/static/image/bg.jpeg);
  background-position: center;
  background-size: cover;
  background-repeat: no-repeat;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.logo {
  width: 200px;
  margin-top: 30px;
  margin-bottom: 40px;
}
.buttons>button {
  margin-top: 10px;
}
.buttons>button:first-child {
  margin-top: 0;
}
.gameSetting {
  position:absolute;
  top:0;
  background-color: aliceblue;
  border-radius: 4px;
  
}
.gameSetting .pokerCheckbox {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  padding: 2px;
  flex-wrap: wrap;
}
.gameSetting checkbox {
  margin: 2px;
}
.gameSetting checkbox .wx-checkbox-input {
  width:75px;
  height: 104.779px;
  padding: 0;
  margin: 0;
  mix-blend-mode:luminosity;
  border: none;
  background-position: center;
  background-repeat: no-repeat;
  background-size: cover;
}
.gameSetting checkbox .wx-checkbox-input.wx-checkbox-input-checked {
  mix-blend-mode: normal;
}
.gameSetting checkbox .wx-checkbox-input.wx-checkbox-input-checked::before {
  display: none;
}
