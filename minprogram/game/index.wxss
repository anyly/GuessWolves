/* game/index.wxss */
.page-body {
  background-color: #fff;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
}
.desktop {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: flex-start;
  width: 100%;
}
.seat {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: flex-start;
}
.seat.right {
  flex-direction: column-reverse;
  align-items: flex-end;
}
.bottombar {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  position: absolute;
  bottom: 0;
}
.bottombar .emoji {
  background: url(https://www.idearfly.com/static/image/emoji.png) no-repeat;
  background-position: center;
  background-size: 34px 34px;
  width: 44px;
  height: 34px;
  background-color: dodgerblue;
  margin: 10px 5px;
  border-radius: 4px;
  box-shadow: 0px 0px 5px #000;
}
.bottombar .mic {
  background: url(https://www.idearfly.com/static/image/mic.png) no-repeat;
  background-position: center;
  background-size: 34px 34px;
  width: 44px;
  height: 34px;
  background-color: dodgerblue;
  margin: 10px 5px;
  border-radius: 4px;
  box-shadow: 0px 0px 5px #000;
}
.bottombar .enter {
  background: url(https://www.idearfly.com/static/image/enter.png) no-repeat;
  background-position: center;
  background-size: 34px 34px;
  width: 44px;
  height: 34px;
  background-color: dodgerblue;
  color: yellow;
  margin: 10px 5px;
  border-radius: 4px;
  box-shadow: 0px 0px 5px #000;
}