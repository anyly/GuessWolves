/* game/index.wxss */
.page {
  background-color: #fff;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: stretch;
  position: relative;
}
.page-body {
  background-color: #fff;
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
  position: relative;
}
.desktop {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: flex-start;
  width: 100%;
}
.seat {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: flex-start;
}
.seat.right {
  flex-direction: column-reverse;
  align-items: flex-end;
}
.bottombar {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  flex-wrap: wrap;
  position: absolute;
  bottom: 0;
}
.bottombar .start, 
.bottombar .ready,
.bottombar .cancel {
  width:100%;
  background-color: dodgerblue;
  color: yellow;
  box-shadow: 0px 0px 5px #000;
}
.confirm {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: stretch;
}
.confirm .targets {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  flex-wrap: wrap;
}
.confirm .target {
  background-color: blueviolet;
  color: yellow;
  border-radius: 50%;
  width: 20px;
  height: 20px;
  text-align: center;
  font-weight: bold;
  margin: 2px 2px;
}
.confirm .yes,
.confirm .no {
  background-color: blueviolet;
  box-shadow: 0px 0px 5px #000;
  color: yellow;
  font-size: 14px;
  width: 44px;
  height: 34px;
  margin: 0 4px;
}
.bottombar .emoji {
  background: url(https://www.idearfly.com/static/image/emoji.png) no-repeat;
  background-position: center;
  background-size: 34px 34px;
  width: 44px;
  height: 34px;
  background-color: dodgerblue;
  margin: 10px 5px;
  border-radius: 4px;
  box-shadow: 0px 0px 5px #000;
}
.bottombar .cast {
  background: url(https://www.idearfly.com/static/image/emoji.png) no-repeat;
  background-position: center;
  background-size: 34px 34px;
  width: 44px;
  height: 34px;
  background-color: dodgerblue;
  margin: 10px 5px;
  border-radius: 4px;
  box-shadow: 0px 0px 5px #000;
}
.bottombar .mic {
  background: url(https://www.idearfly.com/static/image/mic.png) no-repeat;
  background-position: center;
  background-size: 34px 34px;
  width: 44px;
  height: 34px;
  background-color: dodgerblue;
  margin: 10px 5px;
  border-radius: 4px;
  box-shadow: 0px 0px 5px #000;
}
.bottombar .enter {
  background: url(https://www.idearfly.com/static/image/enter.png) no-repeat;
  background-position: center;
  background-size: 34px 34px;
  width: 44px;
  height: 34px;
  background-color: dodgerblue;
  color: yellow;
  margin: 10px 5px;
  border-radius: 4px;
  box-shadow: 0px 0px 5px #000;
}
.bottombar .checked {
  box-shadow:none;
  border: none;
  background-color: brown;
}
.centerbar {
  position: absolute;
  top: 0;
  text-align: center;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: stretch;
  max-height:317px;
}
.camp {
  border: 1rpx violet dashed;
  border-radius: 4px;
  background-color: aliceblue;
  color: dodgerblue;
  font-weight: bold;
  font-size: 14px;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  flex-wrap: wrap;
  flex: 1;
  position: absolute;
  width: 100%;
  max-height:317px;
  top: 20px;
}
.movement {
  margin-top: 5px;
  border: 1rpx violet dashed;
  padding: 5px 10px;
  border-radius: 4px;
  background-color: aliceblue;
  color: dodgerblue;
  font-weight: bold;
  font-size: 14px;
}
.tips {
  margin-top: 5px;
  border: 1rpx violet dashed;
  padding: 5px 10px;
  border-radius: 4px;
  background-color: aliceblue;
  color: dodgerblue;
  font-weight: bold;
  font-size: 14px;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  animation: gleam 1.5s ease-out both alternate infinite;
}
.tips>.title {
  transition: all 2s ease;
}
.tips>.description {
  transition: all 2s ease;
}
.piles {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  position: absolute;
  bottom: 120px;
}

.piles .card {
  width:50px;
  height:40px;
  background-color:blueviolet;
  color:aliceblue;
  margin:2px;
  border-radius:6px;
  border:2px dodgerblue solid;
  display:flex;
  flex-direction:column;
  justify-content:center;
  align-items:center;
  position:relative;
}
.card .seat {
  position: absolute;
  top: -22px;
  color: blueviolet;
  font-size: 12px;
  font-weight: bold;
}

.card .poker {
  display:block;
  text-align: center;
  font-size: 12px;
  font-weight: bold;
  line-height: 1.1em;
  width: 40px;
}

.setting {
  width: 18px;
  margin: 0 4px;
}